<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/key_board"
        android:layout_alignParentEnd="true"
        android:background="@drawable/input_text"
        android:enabled="false"
        android:gravity="right"
        android:maxLength="9"
        android:minHeight="68dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:text="168"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="30dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <RelativeLayout
        android:id="@+id/key_board"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"

        android:background="@drawable/input_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/high"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/input_text"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="7"
                android:textDirection="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="/"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/high2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/high"
            android:background="@drawable/input_text"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="X"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/high3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/high2"
            android:background="@drawable/input_text"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_there"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="+"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/high4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/high3"
            android:background="@drawable/input_text"
            android:orientation="horizontal">


            <Button
                android:id="@+id/clear"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="c"
                android:textSize="30dp" />



            <Button
                android:id="@+id/btn_zero"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/getAnswer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="="
                android:textSize="30dp" />




            <Button
                android:id="@+id/subtract"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="@string/app_name"
                android:text="-"
                android:textSize="30dp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>